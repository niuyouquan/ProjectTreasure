<?xml version="1.0" encoding="utf-8"?>
<com.nyq.projecttreasure.selectphoto.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/giv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="1dip"
        android:layout_margin="@dimen/dp_6"
        android:scaleType="centerCrop"
        android:background="@drawable/photo_more"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/delete"
        android:visibility="gone"/>


</com.nyq.projecttreasure.selectphoto.SquareItemLayout>