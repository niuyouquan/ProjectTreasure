<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/giv_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="h, 599:345"
        app:layout_constraintHorizontal_bias="1.0"
        app:srcCompat="@mipmap/image_practice_repast_1" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giv_image"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="@+id/giv_image"
        app:layout_constraintStart_toStartOf="@+id/giv_image"
        app:layout_constraintTop_toBottomOf="@+id/giv_image"
        android:text="asdfasfas"
        android:textColor="#353535"
        android:textSize="14dp" />

</android.support.constraint.ConstraintLayout>